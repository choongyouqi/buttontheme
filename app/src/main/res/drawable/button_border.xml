<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/md_grey_400" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@android:color/transparent"/>
            <!--<solid android:color="@color/md_grey_100"/>-->
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
            <size android:width="260dp" android:height="50dp"/>
            <stroke android:width="1dp" android:color="@color/md_grey_500"/>
        </shape>
    </item>
    <item android:color="@color/colorButton" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@android:color/transparent"/>
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
            <size android:width="260dp" android:height="50dp"/>
            <stroke android:width="1dp" android:color="@color/colorButton"/>
        </shape>
    </item>
</selector>