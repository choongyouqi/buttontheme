<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/md_grey_500"/>
            <padding android:bottom="0dp" android:left="16dp" android:right="16dp" android:top="0dp"/>
            <stroke android:width="1dp" android:color="@color/md_grey_500"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/colorButton"/>
            <padding android:bottom="0dp" android:left="16dp" android:right="16dp" android:top="0dp"/>
            <stroke android:width="1dp" android:color="@color/colorButton"/>
        </shape>
    </item>

</selector>